<!-- 
Note the 1.1 in the schema version instead of 1.0. This includes the 8.1
PhraseTopic. The schema is used for better Intellisense support.
-->
<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.1">

  <CommandSet xml:lang="en-GB">
    <CommandPrefix>Core</CommandPrefix>
    <Example> Core turn on </Example>
    
    <Command Name="TurnOnOrOff">
      <Example> Core turn on </Example>
      <ListenFor> Turn {onoff} </ListenFor>
      <Feedback> Core Turning {onoff} ... </Feedback>
      <Navigate/>
    </Command>
  
    <PhraseList Label="onoff">
      <Item> on </Item>
      <Item> off </Item>
    </PhraseList>
    
  </CommandSet>
</VoiceCommands>
